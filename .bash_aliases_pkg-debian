alias addpkg="sudo aptitude install"
alias rmpkg="sudo aptitude remove"
alias udpkg="sudo apt-get update"
alias ugpkg="sudo apt-get upgrade"
alias udgpkg="sudo apt-get update && sudo apt-get upgrade"
alias spkg="aptitude search"
alias qpkg="aptitude search $1 | grep -i '^i'"
alias autormpkg="sudo apt-get autoremove"

alias vispkg="sudo aptitude-curses"
