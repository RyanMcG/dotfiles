alias addpkg="pacaur -S"
alias spkg="pacaur -Ss"

alias rmpkg="sudo pacman -Rcs"
alias udpkg="sudo pacman -Sy"
alias ugpkg="sudo pacman -Su"
alias udgpkg="sudo pacman -Syu"
alias autormpkg="sudo pacman -Qdt"
alias qpkg="pacman -Qs"
alias cleanpkg="sudo pacman -Sc"

# Systemctl aliases
alias poweroff="sudo systemctl poweroff"
alias reboot="sudo systemctl reboot"
alias list="sudo systemctl list-units"
alias status="sudo systemctl status"
alias start="sudo systemctl start"
alias stop="sudo systemctl stop"
alias restart="sudo systemctl restart"
alias reload="sudo systemctl reload"
alias senable="sudo systemctl enable"
alias sdisable="sudo systemctl disable"
