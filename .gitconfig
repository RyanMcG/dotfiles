[user]
	name = Ryan McGowan
	email = ryan@ryanmcg.com
[color]
	status = auto
	diff = auto
[merge]
	tool = vimdiff

[color]
	diff = auto
	branch = auto
	status = auto

[alias]
	b = branch
	cm = commit -m
	cam = commit -am
	co = checkout
	d = diff
	s = status
	sn = show --name-only --decorate
	l = log --decorate=short --graph
	l1 = log --decorate=short --graph --oneline
	hs = log --decorate --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	rl = reflog --decorate
	rs = remote show
	rhh = reset --hard HEAD
	p = pull
	pr = pull --rebase

[branch]
	autosetupmerge = always

[core]
	excludesfile = ~/.gitignore.global
[github]
	user = RyanMcG
