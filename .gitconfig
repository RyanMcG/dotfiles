[user]
	name = Ryan McGowan
	email = ryan@ryanmcg.com
[color]
	status = auto
	diff = auto
[merge]
	tool = diffconflicts

[color]
	diff = auto
	branch = auto
	status = auto

[alias]
	a = add
	ap = add -p
	ae = add -e
	b = branch
	cm = commit -m
	ca = commit -a
	cam = commit -am
	co = checkout
	d = diff
	dc = diff --cached
	ds = diff --stat
	f = fetch
	s = status
	sn = show --name-only --decorate
	l = log --decorate --graph
	l1 = log --graph --pretty=epic --abbrev-commit --date=relative
	ls = log --graph --pretty=epic --abbrev-commit --date=relative --stat
	l11 = log --graph --pretty=epic --abbrev-commit --date=relative -1
	l10 = log --graph --pretty=epic --abbrev-commit --date=relative -10
	wc = whatchanged --decorate --graph
	rl = reflog --decorate
	rs = remote show
	p = pull
	pr = pull --rebase
	r = reset
	rh = reset HEAD
	rp = reset -p

[branch]
	autosetupmerge = always

[core]
	excludesfile = ~/.gitignore.global
[github]
	user = RyanMcG
[giggle]
	main-window-maximized = false
	main-window-geometry = 995x563+208+225
	file-view-vpane-position = 494
	history-view-vpane-position = 258
	main-window-view = FileView
[web]
	browser = chromium
[push]
	default = tracking
[mergetool "diffconflicts"]
	cmd = diffconflicts $BASE $LOCAL $REMOTE $MERGED
	keepBackup = false
[pretty]
	epic = %C(yellow)%h%Creset %C(blue)[%C(bold white)%an%Creset%C(blue)]%Creset%C(bold green)%d%Creset %s %Cred(%cr)%Creset
