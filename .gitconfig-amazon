[user]
	name = Ryan McGowan
	email = mcgowanr@amazon.com
[color]
	ui = auto
[merge]
	tool = gdiff
[alias]
	a    = add
	ae   = add -e
	ai   = add -i
	ap   = add -p
	b    = branch
	ca   = commit -a
	caar = commit -a --amend --reuse-message=HEAD
	caf  = commit -a --fixup
	cam  = commit -am
	car  = commit --amend --reuse-message=HEAD
	cf   = commit --fixup
	cm   = commit -m
	co   = checkout
	d    = diff
	dc   = diff --cached
	dcw  = diff --color-words
	ds   = diff --stat
	f    = fetch
	fo   = fetch origin
	g    = grep -n
	l    = log --decorate --graph
	l1   = log --graph --pretty=epic-exact -1
	lcr  = log --pretty=cr
	lcri = log --pretty=cri
	le   = log --graph --pretty=epic-exact
	leng = log --pretty=epic-exact
	lf   = log --graph --pretty=epic-friend
	lfng = log --pretty=epic-friend
	lng  = log --decorate
	lt   = log --graph --pretty=epic-friend -10 --first-parent
	m    = merge
	mnf  = merge --no-ff
	p    = pull
	pr   = pull --rebase
	r    = reset
	ri   = rebase -i -p --autosquash
	rilt = rebase -i -p --autosquash HEAD~10
	rl   = reflog --decorate
	rp   = rebase -p
	rs   = remote show
	s    = status
	sl   = stash list --pretty=epic-exact
	sn   = show --stat --decorate
	wc   = whatchanged --decorate --graph
[core]
	pager = less -FXR
	editor = vim
	excludesfile = ~/.gitignore.global
	preloadindex = true
[github]
	user = RyanMcG
[giggle]
	main-window-maximized = false
	main-window-geometry = 995x563+208+225
	file-view-vpane-position = 494
	history-view-vpane-position = 258
	main-window-view = FileView
[web]
	browser = chromium
[push]
	default = upstream
[mergetool "splice"]
	cmd = "gvim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
	trustExitCode = true
[mergetool "gdiff"]
	cmd = "gvim -f $MERGED -c 'Gdiff'"
	trustExitCode = true
[pretty]
	cr = "commit: %H\n\n%B\n"
	cri = "%h %ci ~ %s"
	epic-exact = %C(yellow)%h%Cred %ci%Creset%Creset%C(bold red) ~%Creset %C(cyan)%an%Creset%C(bold cyan),%Creset %s%C(bold green)%d%Creset
	epic-friend = %C(yellow)%h%Creset %C(cyan)%an%Creset%C(bold cyan),%Creset %s%Cred %ar%C(bold green)%d%Creset
[mergetool]
	keepBackup = false
[receive]
	denyCurrentBranch = warn
[amazon]
	append-cr-url = false
