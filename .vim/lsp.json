    "buildFlags": ["-tags=integration,dynamodb_integration,elasticsearch_integration"],
    "env": {"GOFLAGS": "-tags=integration,dynamodb_integration,elasticsearch_integration"}
  },
  "pyls": {
    "plugins": {
      "pyls_mypy": {
        "enabled": true,
        "live_mode": false
